{
  "name": "angular-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for creating typescript/angular based npm packages and webpack apps.",
  "license": "MIT",
  "author": "Alex Bahnisch",
  "homepage": "https://github.com/alexbahnisch/angular-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexbahnisch/angular-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/alexbahnisch/angular-boilerplate/issues"
  },
  "main": "./src/package/index.ts",
  "private": true,
  "keywords": [
    "boilerplate",
    "npm",
    "angular",
    "typescript",
    "webpack"
  ],
  "dependencies": {},
  "devDependencies": {
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@types/node": "^9.6.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^5.0.0",
    "copy-webpack-plugin": "^4.5.1",
    "core-js": "^2.5.4",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "rxjs": "^5.5.8",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-livereload-plugin": "^2.1.1",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {},
  "scripts": {
    "app:build": "npm run app:clean && cross-env CONFIG=app webpack --progress -p",
    "app:build-dev": "npm run app:clean && cross-env CONFIG=app NODE_ENV=development webpack --devtool inline-source-map --progress --watch",
    "app:build-docker": "cross-env CONFIG=app webpack -p",
    "app:clean": "rm !(*.gitkeep) -rf ./dist/app/*",
    "app:server": "http-server ./dist/app/ -p 8081",
    "app:server-dev": "cross-env CONFIG=app webpack-dev-server --devtool inline-source-map --progress",
    "clean": "npm run app:clean && npm run package:clean",
    "package": "npm run package:compile && npm run package:bundle && npm run package:artifact",
    "package:artifact": "node ./scripts/pre-package.js && cd ./dist/artifacts/ && npm pack ../package",
    "package:bundle": "cross-env CONFIG=package MIN=true webpack -p && cross-env CONFIG=package webpack && rm ./dist/package/zzz.*",
    "package:clean": "rm !(*.gitkeep) -rf ./dist/package/*",
    "package:compile": "npm run package:clean && tsc -d"
  }
}
