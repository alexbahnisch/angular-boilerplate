{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/package/",
    "pretty": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es5"
  },
  "include": [
    "./src/package/**/*.ts"
  ]
}